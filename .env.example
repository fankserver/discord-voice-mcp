# Discord Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_GUILD_ID=your_guild_id_here

# Transcription Provider Selection
# Options: vosk, whisper, google
TRANSCRIPTION_PROVIDER=vosk

# Vosk Configuration (Free, Offline)
# Download model from: https://alphacephei.com/vosk/models
VOSK_MODEL_PATH=./models/vosk-model-en-us-0.22

# Whisper.cpp Configuration (Free, Offline)
# Install whisper.cpp and download models using setup scripts
WHISPER_MODEL_PATH=./models/ggml-base.en.bin
WHISPER_EXECUTABLE=./whisper.cpp/main

# Google Cloud Speech Configuration (Cloud-based)
# Create service account and download JSON key from Google Cloud Console
GOOGLE_APPLICATION_CREDENTIALS=./credentials/google-cloud-key.json

# Logging Level
LOG_LEVEL=info